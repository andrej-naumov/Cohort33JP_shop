<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-customer" author="andrej-naumov">

        <!-- Удаляем ненужные столбцы -->
        <dropColumn tableName="customer" columnName="email"/>
        <dropColumn tableName="customer" columnName="phone"/>
        <dropColumn tableName="customer" columnName="registered_date"/>

        <!-- Добавляем новый столбец -->
        <addColumn tableName="customer">
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
        </addColumn>

    </changeSet>

</databaseChangeLog>
